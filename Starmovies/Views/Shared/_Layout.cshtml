<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("/img/apple-icon.png")">
    <link rel="icon" type="image/png" href="@Url.Content("/img/favicon.png")">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
